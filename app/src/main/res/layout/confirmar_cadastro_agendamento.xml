<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txt_motivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual o motivo do agendamento?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark" />

    <RadioGroup
        android:id="@+id/radio_group_motivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <RadioButton
            android:id="@+id/radio_btn_psicologico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problemas Psicológicos" />

        <RadioButton
            android:id="@+id/radio_btn_pedagógico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problemas Pedagógicos (Faculdade)" />

        <RadioButton
            android:id="@+id/radio_btn_familiares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problemas Familiares" />

        <RadioButton
            android:id="@+id/radio_btn_outros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outros" />

    </RadioGroup>

    <EditText
        android:id="@+id/edit_text_outros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descreva"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_add_observacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:text="Gostaria de adicionar alguma observação? (Opcional)"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/edit_text_observacao"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Observações"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_profissional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/txt_data_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_confirmar_agendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR" />

</LinearLayout>