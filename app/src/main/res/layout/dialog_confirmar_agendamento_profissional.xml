<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
    android:id="@+id/btn_definir_local"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/btn_customizado"
        android:textColor="@drawable/btn_customizado"
    android:text="DEFINIR LOCAL DE ATENDIMENTO" />

    <Button
        android:id="@+id/btn_atendimento"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_customizado"
        android:textColor="@drawable/btn_customizado"
        android:text="REALIZAR ATENDIMENTO" />

    <Button
        android:id="@+id/btn_cancelar_agendamento_prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_customizado"
        android:textColor="@drawable/btn_customizado"
        android:text="CANCELAR AGENDAMENTO" />
</LinearLayout>